<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DetailScreen">

    <include
        android:id="@+id/toolbarLL"
        layout="@layout/toolbar_layout"
        />

    <ImageView
        android:id="@+id/userPic"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/black"
        tools:src="@drawable/default_image_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarLL"/>

    <TextView
        android:id="@+id/detailsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/details"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userPic"/>

    <TextView
        android:id="@+id/firstNameTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/first_name"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/detailsTitle"
        app:layout_constraintTop_toBottomOf="@id/detailsTitle"/>

    <TextView
        android:id="@+id/firstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="Avin"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/firstNameTitle"
        app:layout_constraintTop_toTopOf="@id/firstNameTitle"
        app:layout_constraintBottom_toBottomOf="@id/firstNameTitle"/>

    <TextView
        android:id="@+id/lastNameTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/last_name"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/firstNameTitle"
        app:layout_constraintTop_toBottomOf="@id/firstNameTitle"/>

    <TextView
        android:id="@+id/lastName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="Pednekar"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/lastNameTitle"
        app:layout_constraintTop_toTopOf="@id/lastNameTitle"
        app:layout_constraintBottom_toBottomOf="@id/lastNameTitle"/>

    <TextView
        android:id="@+id/emailIdTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/emailid"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/lastNameTitle"
        app:layout_constraintTop_toBottomOf="@id/lastNameTitle"/>

    <TextView
        android:id="@+id/emailId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="avinpednekar1818@gmail.com"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/emailIdTitle"
        app:layout_constraintTop_toTopOf="@id/emailIdTitle"
        app:layout_constraintBottom_toBottomOf="@id/emailIdTitle"/>

</androidx.constraintlayout.widget.ConstraintLayout>